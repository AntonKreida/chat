{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./webpack.config.ts",
        "./package.json",
        "./types/*.d.ts",
    ],
    "exclude": [
        "node_modules",
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
}
