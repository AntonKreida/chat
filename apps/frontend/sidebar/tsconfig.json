{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "jsx": "preserve",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
        "types/**/*.d.ts",
        "webpack.config.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "exclude": [
        "node_modules",
    ]
}
